<a href="/languages/<%= track.id %>" class="track_link col-xs-4 col-sm-4 col-md-2 col-lg-2">
  <div class="text-center">
    <%= track_icon(track.id) %>
    <p><%= track.language %></p>
    <% if submissions %>
      <p><%= submissions[track.language.downcase] %> / <%= track.problems.count %> Completed</p>
    <% else %>
      <p><%= track.problems.count %> Problems</p>
    <% end %>
  </div>
</a>
