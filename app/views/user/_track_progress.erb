<div class="track-info col-xs-4 col-sm-4 col-md-4 col-lg-4">
  <%= track_icon(track_info.language, '60') %>
  <div class="track-text">
    <h5><%= track_info.track.language %></h5>
    <% if track_info.completed? %>
      <p>Completed: <%= ex_pluralizer(track_info.completed, 'Problem') %></p>
    <% end %>
    <% if track_info.reviewed? %>
      <p>Reviewed: <%= ex_pluralizer(track_info.reviewed, 'Iteration') %></p>
    <% end %>
  </div>
</div>
