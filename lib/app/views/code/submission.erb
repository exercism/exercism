<div <%= "id='#{html[:id]}'" if html[:id] %>
  <%= "style='#{html[:style]}'" if html[:style] %>
  class="revision code col-md-6">
  <h2>
    <a href="/submissions/<%= submission.key %>">
      <%= title %>
    </a>
    <div style="float: right;">
    <span class="badge badge-important"><%= submission.nit_count %>
    </span>
    </div>
  </h2>
  <h3>
    <small>Submitted <%= ago(submission.created_at) %> &centerdot;
      <a href="/submissions/<%= submission.key %>">
        view submission &raquo;
      </a>
    </small>
  </h3>
  <div class"btn-group">
    <a class="btn btn-default" data-action="enlarge">
      <i class="fa fa-expand"></i>
    </a>
    <a style="display: none;" class="btn btn-default" data-action="shrink">
      <i class="fa fa-compress"></i>
    </a>
    <br />
  </div>
  <div style="padding-top: 2px;">
    <%= md(submission.code, submission.track_id) %>
  </div>
</div>
