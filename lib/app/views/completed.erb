<h2>Completed Assignments</h2>

<% if submissions.any? %>
  <table class="table table-bordered table-striped">
    <thead>
      <tr>
        <th>User</th>
        <th>Link</th>
        <th>Submitted</th>
      </tr>
    </thead>
    <tbody>
      <% submissions.all.each do |submission| %>
        <tr>
          <td>
            <div class="avatar">
              <%= gravatar_tag submission.user.avatar_url, size: 30 %>
            </div>
            <a href="/<%= submission.user.username %>"><%= submission.user.username %></a>
          </td>

          <td>
            <a href="/submissions/<%= submission.id %>"><%= submission.slug %></a>
          </td>

          <td>
            <%= ago(submission.at) %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <p>Want to see more? <a href="https://github.com/kytrinyx/exercism.io/issues/532" target="_blank">Add pagination :)</a></p>
<% else %>
  <p>
    <b>No recently approved submissions in <%= submission.language %>: <%= submission.slug %></b>
  </p>
<% end %>
