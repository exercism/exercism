<h1><%= submission.language %>: <%= submission.slug %></h1>

<div class="row">
<div class="span6">
  <h2>Code</h2>
  <%= Markdown.render("```#{submission.language}\n#{submission.code}\n```") %>
  <% if submission.approved? %>
    <h2>Example</h2>
    <%= Markdown.render("```#{submission.language}\n#{Exercism.current_curriculum.in(submission.language).assign(submission.slug).example}\n```") %>
  <% end %>
</div>

<div class="span6">
  <h2>Nits</h2>
  <% submission.nits.each do |nit| %>
    <blockquote>
      <%= nit.comment %>
      <br />
      &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
      <cite><em><%= nit.user.username %></em></cite>
    </blockquote>
  <% end %>
</div>
</div>

