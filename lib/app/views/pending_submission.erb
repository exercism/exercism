<div class="pending-submission span8"
  data-user="<%= submission.user.username %>"
  data-exercise="<%= submission.slug %>"
  data-language="<%= submission.language %>"
  data-nits="<%= submission.nits.count %>"
  data-arguments="<%= submission.argument_count %>"
  data-versions="<%= submission.versions_count %>"
  data-url="/submissions/<%= submission.id %>">

  <h3 class="span8">
    <a href="/submissions/<%= submission.id %>"><%= submission.slug %></a>
  </h3>

  <div class="user span4">
    <h3>
      <small>
        <div class="avatar">
        <%= gravatar_tag submission.user.avatar_url, size: 30 %>
        </div>
      <%= submission.user.username %>
      submitted this exercise <%= ago(submission.at) %>
      </small>
    </h3>
  </div>

  <%= language_icon(submission.language, class: "span1") %>
  <div class="nits circle span1">
    <%= submission.nits_by_others_count %>
  </div>

  <div class="arguments circle span1">
    <%= submission.discussions_involving_user_count %>
  </div>

  <div class="versions circle span1">
    <%= submission.versions_count %>
  </div>
</div>
